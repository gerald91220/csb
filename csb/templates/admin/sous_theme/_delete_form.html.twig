<form method="post" action="{{ path('sous_theme_delete', {'id': sous_theme.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sous_theme.id) }}">
    <button type="submit" class="btn btn-danger btn-sm">
        <i class="fa fa-trash-o"></i> Supprimer </button>
</form>
