{% extends 'base.html.twig' %}

{% block title %}Programmes{% endblock %}

{% block body %}
    <h1>Programmes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ programme.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ programme.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ programme.contenu }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ programme.dateCreation ? programme.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateUpdate</th>
                <td>{{ programme.dateUpdate ? programme.dateUpdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ programme.file }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('programmes_index') }}">back to list</a>

    <a href="{{ path('programmes_edit', {'id': programme.id}) }}">edit</a>

    {{ include('programmes/_delete_form.html.twig') }}
{% endblock %}
